@model IEnumerable<AgendaWebApplication.Models.Pessoa>

<p>
    @Html.ActionLink("Create New Pessoa", "AddPessoa")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nomePessoa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telefonePessoa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.emailPessoa)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        @Html.HiddenFor(modelItem => item.idPessoa)
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nomePessoa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefonePessoa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.emailPessoa)
            </td>
            <td>
                @Html.ActionLink("Update", "UpdatePessoa", new { id = item.idPessoa }) |
                @Html.ActionLink("Delete", "DeletePessoa", new { id = item.idPessoa }, new { onclick = "return confirm('Tem certeza que deseja excluir?');" })
            </td>
        </tr>
    }

</table>
